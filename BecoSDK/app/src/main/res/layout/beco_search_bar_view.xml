<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/eight"
    android:layout_marginTop="@dimen/eight"
    android:layout_marginRight="@dimen/eight"
    android:layout_marginBottom="@dimen/fifteen"
    android:background="@drawable/edittext_bg"
    android:visibility="visible"
    app:cardCornerRadius="@dimen/twenty_seven"
    app:cardElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/twenty_seven"
            android:layout_height="@dimen/twenty_seven"
            android:layout_marginLeft="@dimen/ninteen"
            android:src="@drawable/search_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/edt_search"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText

            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/fifty_five"
            android:background="@null"
            android:focusable="false"
            android:fontFamily="@font/raleway_semibold"
            android:hint="@string/where_to_go"
            android:padding="@dimen/ten"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toRightOf="@id/img_search"
            app:layout_constraintRight_toLeftOf="@id/imgClose"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="@dimen/twenty_seven"
            android:layout_height="@dimen/twenty_seven"
            android:layout_marginLeft="@dimen/eight"
            android:layout_marginRight="@dimen/fifteen"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/edt_search"
            app:layout_constraintRight_toLeftOf="@id/img_mic"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/img_mic"
            android:layout_width="@dimen/twenty_seven"
            android:layout_height="@dimen/twenty_seven"
            android:layout_marginRight="@dimen/fifteen"
            android:src="@drawable/mic_icon"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgClose"
            app:layout_constraintRight_toLeftOf="@id/rel_direction"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/rel_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/eight"
            android:layout_marginRight="@dimen/five"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toRightOf="@id/img_mic"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_direction"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="@dimen/ten"
                android:background="@drawable/circle"
                android:layout_centerInParent="true"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>