<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/eight"
        app:cardCornerRadius="@dimen/twelve_p_five"
        app:cardBackgroundColor="@color/white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/twelve_p_five"
            >
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fifteen"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/etName"
                android:text="@string/dialog_name_title"
                android:textColor="@color/darkText"
                android:textSize="20sp"
                />

            <ImageView
                android:id="@+id/imgBgEdittext"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/fifteen"
                android:src="@drawable/edittext_bg_outline"
                app:layout_constraintTop_toTopOf="@id/etName"
                app:layout_constraintBottom_toBottomOf="@id/etName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/eight"
                android:paddingBottom="@dimen/eight"
                android:layout_marginLeft="@dimen/twelve_p_five"
                android:layout_marginRight="@dimen/five"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintLeft_toLeftOf="@id/imgBgEdittext"
                app:layout_constraintRight_toLeftOf="@id/imgClear"
                app:layout_constraintBottom_toTopOf="@id/btnCancel"
                android:background="@null"
                />
            <ImageView
                android:id="@+id/imgClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/eight"
                android:padding="@dimen/five"
                app:layout_constraintTop_toTopOf="@id/etName"
                app:layout_constraintBottom_toBottomOf="@id/etName"
                app:layout_constraintLeft_toRightOf="@id/etName"
                app:layout_constraintRight_toRightOf="@id/imgBgEdittext"
                android:src="@drawable/ic_close"/>
            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/etName"
                android:layout_marginTop="@dimen/twenty_seven"
                android:text="Cancel"
                android:padding="@dimen/eight"
                android:textColor="@color/blue"
                android:layout_marginRight="@dimen/eight"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnDone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="1"
                android:gravity="center"
                android:background="@drawable/text_bg_outline"
                />
            <TextView
                android:id="@+id/btnDone"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Done"
                android:padding="@dimen/eight"
                android:background="@drawable/text_bg_fill"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintLeft_toRightOf="@id/btnCancel"
                app:layout_constraintBottom_toBottomOf="@id/btnCancel"
                app:layout_constraintTop_toTopOf="@id/btnCancel"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>