<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/marker_bottom_sheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:elevation="@dimen/twelve_p_five"
    android:animateLayoutChanges="true"
    android:background="@drawable/bottom_layout_bg"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/ninteen"
        >
        <TextView
            android:id="@+id/bottom_sheet_txt_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/seventeen"
            android:text="Room 102"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_semibold"/>

        <TextView
            android:layout_below="@+id/bottom_sheet_txt_place"
            android:id="@+id/bottom_sheet_txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fourteen"
            android:text="Room 102"
            android:fontFamily="@font/raleway_medium"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4"
            android:src="@drawable/star_unselected"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
        android:layout_marginBottom="@dimen/twelve_p_five"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_marginBottom="@dimen/twelve_p_five"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/ninteen"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/btn_sheet_cancel"
                android:textColor="@color/blue"
                android:paddingLeft="@dimen/twelve_p_five"
                android:paddingRight="@dimen/twelve_p_five"
                android:paddingTop="@dimen/ten"
                android:paddingBottom="@dimen/ten"
                android:background="@drawable/bg_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview"
                android:drawablePadding="@dimen/ten"
                android:drawableLeft="@drawable/ic_double_angle_pointing_to_right"
                android:layout_marginLeft="@dimen/twelve_p_five"
                android:textColor="@color/white"
                android:visibility="gone"
                android:paddingLeft="@dimen/twelve_p_five"
                android:paddingRight="@dimen/twelve_p_five"
                android:paddingTop="@dimen/ten"
                android:paddingBottom="@dimen/ten"
                android:background="@drawable/bg_txt_fill"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/twelve_p_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_sheet_directions"
                android:background="@drawable/bg_txt_fill">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_gravity="center"
                    android:src="@drawable/right_arrow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Directions"
                    android:layout_marginRight="@dimen/five"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/twelve_p_five"
                    android:paddingRight="@dimen/twelve_p_five"
                    android:paddingTop="@dimen/ten"
                    android:paddingBottom="@dimen/ten"
                    android:background="@drawable/bg_txt_fill"/>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
